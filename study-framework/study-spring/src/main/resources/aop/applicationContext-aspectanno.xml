<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/com.study.spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/com.study.spring-context.xsd
                           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/com.study.spring-aop.xsd">

    <context:component-scan base-package="com.dranawhite.com.study.spring.aop"/>
    <!-- 默认值为false，表示只能代理接口，改为true，可以代理目标类 -->
    <aop:aspectj-autoproxy proxy-target-class="true"/>

</beans>